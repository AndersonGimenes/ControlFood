@model Categoria

<form method="post">
    @if (ViewBag.categorias.Count > 0)
     {
        <label>Categorias cadastradas</label>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Categoria</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in ViewBag.Categorias)
                {
                <tr>
                    <td>@categoria.Tipo</td>
                    <td></td>
                    <td><button type="button" class="btn btn-primary">Editar</button></td>
                    <td><button type="button" class="btn btn-danger">Deletar</button></td>
                    <input type="hidden" value="@categoria.IdentificadorUnico" />
                </tr>
                }
            </tbody>
        </table>
     }

<div class="form-group">
    <label>Cadastrar nova categoria</label>
    <input type="text" class="form-control" asp-for="@Model.Tipo">
    <span asp-validation-for="@Model.Tipo" class="text-danger"></span>
</div>
    <button type="submit" class="btn btn-success">Cadastrar</button>
</form>
