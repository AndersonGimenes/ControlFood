@model List<Cliente>

<form>

    @if (Model.Count > 0)
    {
        <label>Clientes cadastrados</label>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Telefone Celular</th>
                    <th scope="col">Telefone Fixo</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td class="nome">@cliente.Nome</td>
                        <td class="telefone-celular">@cliente.TelefoneCelular</td>
                        <td class="telefone-fixo">@cliente.TelefoneFixo</td>
                        <td><button type="button" class="btn btn-success btn-cadastro-endereco">Novo Endereço</button></td>
                        <td><button type="button" class="btn btn-warning btn-consulta-endereco">Consultar Endereço</button></td>
                        <td><button type="button" class="btn btn-primary btn-editar">Editar</button></td>
                        <td><button type="button" class="btn btn-danger btn-deletar">Deletar</button></td>
                        <input type="hidden" class="identificador-unico" value="@cliente.IdentificadorUnico" />
                    </tr>
                }
            </tbody>
        </table>
    }

    <h6>Dados Cliente</h6>
    <div class="form-group">
        <label>Nome do Cliente</label>
        <span id="span-valida-nome"></span>
        <input type="text" class="form-control" id="nome" placeholder="Digite o novo cliente">
    </div>

    <div class="form-group">
        <label>CPF</label>
        <input type="text" class="form-control" id="cpf" placeholder="Digite o CPF">
    </div>

    <div class="form-group">
        <label>Telefone Fixo</label>
        <input type="text" class="form-control" id="telefone-fixo" placeholder="Digite o telefone fixo">
    </div>

    <div class="form-group">
        <label>Telefone Celular</label>
        <input type="text" class="form-control" id="telefone-celular" placeholder="Digite o telefone celular">
    </div>

    <div class="form-group">
        <label>Data Nascimento</label>
        <input type="date" class="form-control" id="data-nascimento" placeholder="Digite a data de nascimento">
    </div>

    <div class="form-group">
        <label>E-mail</label>
        <span id="span-valida-email"></span>
        <input type="text" class="form-control" id="email" placeholder="Digite o email">
    </div>

    <h6>Dados endereço</h6>
    <div class="form-group">
        <label>Cep</label>
        <span id="span-valida-cep"></span>
        <input type="text" class="form-control" id="cep" placeholder="Digite o cep">
    </div>

    <div class="form-group">
        <label>Logradouro</label>
        <span id="span-valida-logradouro"></span>
        <input type="text" class="form-control" id="logradouro" placeholder="Digite o logradouro. Ex: Rua Arnaldo Coelho, Av: Teodoro Sampaio">
    </div>

    <div class="form-group">
        <label>Numero Endereço</label>
        <input type="text" class="form-control" id="numero" placeholder="Digite o numero do endereço">
    </div>

    <div class="form-group">
        <label style="color: red">Se for Condominio/Apartamento informar bloco e numero</label>
        <input type="text" class="form-control" id="condominio-apartamento" placeholder="Digite o bloco e numero">
    </div>

    <div class="form-group">
        <label>Complemento</label>
        <input type="text" class="form-control" id="complemento" placeholder="Digite o complemento">
    </div>

    <div class="form-group">
        <label>Bairro</label>
        <span id="span-valida-bairro"></span>
        <input type="text" class="form-control" id="bairro" placeholder="Digite o bairro">
    </div>

    <div class="form-group">
        <label>Cidade</label>
        <span id="span-valida-cidade"></span>
        <input type="text" class="form-control" id="cidade" placeholder="Digite a cidade">
    </div>

    <div class="form-group">
        <label>Estado</label>
        <input type="text" class="form-control" id="estado" value="SP" disabled="disabled">
    </div>

    <button type="button" class="btn btn-success" id="btn-cadastrar">Cadastrar</button>

</form>

<partial name="_ModalConsultarEndereco" />

@section Css {
    <link rel="stylesheet" type="text/css" href="~/css/cliente/cliente.css" />
}

@section Scripts {
    <script type="text/javascript" src="~/js/comumHelper.js"></script>
    <script type="text/javascript" src="~/js/cliente/cliente.js"></script>
}