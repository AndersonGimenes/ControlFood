@model List<Produto>

@if (ViewBag.subCategorias.Count > 0)
{
    <form>

        @if (Model.Count > 0)
        {
            <label>Produtos cadastrados</label>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Codigo produto</th>
                        <th scope="col">Nome produto</th>
                        <th scope="col">Sub categoria</th>
                        <th scope="col">Valor venda</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var produto in Model)
                    {
                        <tr>
                            <td class="produto-codigo-interno">@produto.CodigoInterno</td>
                            <td class="produto-nome">@produto.Nome</td>
                            <td class="sub-categoria-tipo">@produto.SubCategoria.Tipo</td>
                            <td class="produto-valor-venda">R$ @produto.ValorVenda</td>
                            <td><button type="button" class="btn btn-success" onclick="produto.estoque.popularModalCadastro(this);">Cadastrar Estoque</button></td>
                            <td><button type="button" class="btn btn-warning" onclick="produto.estoque.consultar(this);">Consultar Estoque</button></td>
                            <td><button type="button" class="btn btn-primary" onclick="produto.popularModalAtualizar(this);">Editar</button></td>
                            <td><button type="button" class="btn btn-danger" onclick="produto.deletar(this);">Deletar</button></td>
                            <input type="hidden" class="produto-identificador-unico" value="@produto.IdentificadorUnico" />
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="form-group">
            <label>Selecione a sub-categoria</label>
            <select class="form-control" id="sub-categoria-identificador-unico">
                @foreach (var subCategoria in ViewBag.SubCategorias)
                {
                    <option value="@subCategoria.IdentificadorUnico">@subCategoria.Tipo</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Nome do Produto</label>
            <span id="valida-produto-nome"></span>
            <input type="text" class="form-control" id="produto-nome" placeholder="Digite o novo produto">
        </div>

        <div class="form-group">
            <label>Codigo do Produto</label>
            <span id="valida-produto-codigo-interno"></span>
            <input type="text" class="form-control" id="produto-codigo-interno" placeholder="Digite o codigo do produto">
        </div>

        <div class="form-group">
            <label>Valor de venda</label>
            <span id="valida-produto-valor-venda"></span>
            <input type="text" class="form-control" id="produto-valor-venda" placeholder="Digite o valor de venda">
        </div>

        <button type="button" class="btn btn-success" onclick="produto.cadastrar(this);">Cadastrar</button>
    </form>

    <partial name="_ModalCadastrarEstoque" />
    <partial name="_ModalAtualizar" />
    <partial name="_ModalConsultarEstoque" />
    <partial name="_ModalAtualizarEstoque" />

}
else
{
    <div class="alert alert-warning text-center">
        Para cadastrar um produto deve existir ao menos uma sub-categoria
    </div>
}
@section Css {
    <link rel="stylesheet" type="text/css" href="~/css/produto/produto.css" />
}

@section Scripts {
    <script type="text/javascript" src="~/js/model/CategoriaModel.js"></script>
    <script type="text/javascript" src="~/js/model/SubCategoriaModel.js"></script>
    <script type="text/javascript" src="~/js/model/ProdutoModel.js"></script>
    <script type="text/javascript" src="~/js/model/EstoqueModel.js"></script>
    <script type="text/javascript" src="~/js/subCategoria/SubCategoria.js"></script>        
    <script type="text/javascript" src="~/js/produto/Produto.js"></script>
    <script type="text/javascript" src="~/js/produto/Estoque.js"></script>
    <script type="text/javascript" src="~/js/Helper.js"></script>
    <script type="text/javascript">
        let produto = new Produto();
    </script>
}