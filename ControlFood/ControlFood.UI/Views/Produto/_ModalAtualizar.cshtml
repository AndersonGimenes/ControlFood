<!-- The Modal -->
<div class="modal" id="produto-atualizar-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Atualizar Produto</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label class="h4">Sub Categoria</label>

                        <!--renderizado via js-->
                        <div id="div-sub-categoria-tipo-modal"></div>

                    </div>
                    <div class="form-group">
                        <label class="h4">Produto</label>

                        <!--renderizado via js-->
                        <div id="div-produto-nome-modal"></div>

                    </div>

                    <div class="form-group">
                        <label class="h4">Codigo Produto</label>

                        <!--renderizado via js-->
                        <div id="div-produto-codigo-interno-modal"></div>

                    </div>

                    <div class="form-group">
                        <label class="h4">Valor venda</label>

                        <!--renderizado via js-->
                        <div id="div-produto-valor-venda-modal"></div>

                    </div>

                </div>

                <!--renderizado via js-->
                <div id="div-produto-identificador-unico-modal"></div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-custom" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-success" onclick="produto.atualizar(this);">Atualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>