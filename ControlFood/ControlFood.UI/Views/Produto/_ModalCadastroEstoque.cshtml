<!-- The Modal -->
<div class="modal" id="modal-cadastro-estoque">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Cadastrar Estoque do Produto</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label class="h6">Produto</label>
                        <span id="produto-nome"></span>
                    </div>

                    <div class="form-group">
                        <label>Quantidade</label>
                        <span id="span-valida-quantidade"></span>
                        <input type="text" class="form-control" id="quantidade" placeholder="Digite a quantidade do produto">
                    </div>

                    <div class="form-group">
                        <label>Valor de compra unitario</label>
                        <span id="span-valida-valor-compra-unitario"></span>
                        <input type="text" class="form-control" id="valor-compra-unitario" placeholder="Digite o valor da compra unitario">
                    </div>

                    <div class="form-group">
                        <label>Nome de compra total</label>
                        <span id="span-valida-valor-compra-total"></span>
                        <input type="text" class="form-control" id="valor-compra-total" placeholder="Digite o valor da compra total">
                    </div>

                    <div class="form-group">
                        <label>Data de validade</label>
                        <span id="span-valida-data-validade"></span>
                        <input type="date" class="form-control" id="data-validade">
                    </div>

                </div>
                <span id="span-produto-identificador-unico"></span>
                
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="btn-close" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" id="btn-cadastrar-estoque">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</div>