<!-- The Modal -->
<div class="modal" id="modal-consultar-estoque">
    <div class="modal-dialog modal-posicao-ajuste">
        <div class="modal-content modal-tamanho-ajuste">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Consultar Estoque Produto</h4>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Quantidade</th>
                            <th scope="col">Valor compra unidade</th>
                            <th scope="col">Valor compra total</th>
                            <th scope="col">Validade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < 10; i++) {
                        <tr>
                            <td class="quantidade">10</td>
                            <td class="valor-compra-unitario">R$ 5,00</td>
                            <td class="valor-compra-total">R$ 50,00</td>
                            <td class="validade">01/10/2021</td>

                            <input type="hidden" class="identificador-unico-produto" value="1" />
                        </tr>
                        }
                        
                    </tbody>
                </table>
                <div class="row">
                    <H6 class="col-3">Quantidade total</H6>
                    <p class="col-3">30</p>
                </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>