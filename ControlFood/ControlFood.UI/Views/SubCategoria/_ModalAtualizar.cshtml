<!-- The Modal -->
<div class="modal" id="sub-categoria-atualizar-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Atualizar Sub-Categoria</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label class="h4">Categoria</label>

                        <!--renderizado via js-->
                        <div id="div-categoria-tipo-modal"></div>

                    </div>
                    <div class="form-group">
                        <label class="h4">Sub-Categoria</label>
                        <!--renderizado via js-->
                        <div id="div-sub-categoria-tipo-modal"></div>

                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-10">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="sub-categoria-indicador-modal" id="sub-categoria-indicador-cozinha-modal" value="0">
                                    <label class="form-check-label">
                                        Item separado pela cozinha
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="sub-categoria-indicador-modal" id="sub-categoria-indicador-bar-modal" value="1">
                                    <label class="form-check-label">
                                        Item separado pelo bar
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--renderizado via js-->
                <div id="div-sub-categoria-identificador-unico-modal"></div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-custom" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-success" onclick="subCategoria.atualizar(this);">Atualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>